<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/White</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- Title textView -->
    <style name="AppTheme.BlackTextView" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textColor">@color/K_222222_black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <!-- Title textView -->
    <style name="AppTheme.BlackSmallTextView" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textColor">@color/K_212121_black</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <!-- Title textView -->
    <style name="AppTheme.GrayTextViewSmall" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textColor">@color/K_8D8D8D_gray</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="AppTheme.BaseButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/noto_sans_regular</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="AppTheme.CLButtonBold" parent="AppTheme.BaseButton">
        <item name="android:textColor">@color/K_13131E_black_strong</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/noto_sans_bold</item>
    </style>

    <style name="AppTheme.Button">
        <!--//TODO Insert Button style-->
        <item name="android:textColor">@color/black_text</item>
        <item name="android:padding">0dp</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:elevation">1dp</item>
        <item name="android:translationZ">1dp</item>
        <item name="android:fontFamily">@font/noto_sans_regular</item>
    </style>

    <style name="AppTheme.ButtonBold">
        <!--//TODO Insert Button style-->
        <item name="android:textColor">@color/K_13131E_black_strong</item>
        <item name="android:minHeight">@dimen/dp_46</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/noto_sans_bold</item>
    </style>

    <style name="AppTheme.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/noto_sans_regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.TextViewBold">
        <!--//TODO Insert TextView style-->
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black_text_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/noto_sans_bold</item>
    </style>

    <style name="AppTheme.EditText">
        <!--//TODO Insert EditText style-->
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:fontFamily">@font/noto_sans_regular</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>

        <!-- Set this to true if you want Full Screen without status bar -->
        <item name="android:windowFullscreen">true</item>

        <item name="android:windowIsFloating">false</item>

        <!-- This is important! Don't forget to set window background -->
        <item name="android:windowBackground">@color/transparent</item>

        <!-- Additionally if you want animations when dialog opening -->
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="FadeInPopWin">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="@android:windowEnterAnimation">@anim/pop_win_content_fade_in</item>
        <item name="@android:windowExitAnimation">@anim/pop_win_content_fade_out</item>
    </style>

    <style name="styleTextTabLayout" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/noto_sans_regular</item>
        <item name="android:textSize">@dimen/sp_11</item>
        <item name="android:textColor">@color/K_222222_black</item>
    </style>

    <style name="styleTextBigTabLayout" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/noto_sans_regular</item>
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:textColor">@color/K_222222_black</item>
    </style>

    <style name="styleTextSingleLine">
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="styleTextRegular14">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/K_222222_black</item>
        <item name="android:fontFamily">@font/noto_sans_regular</item>
    </style>

    <style name="styleTextBold14">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/K_222222_black</item>
        <item name="android:fontFamily">@font/noto_sans_bold</item>
    </style>

    <style name="styleTextInput">
        <item name="android:background">@drawable/bg_select_item</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/K_222222_black</item>
        <item name="android:textColorHint">@color/K_CCCCCC_grey_holder</item>
        <item name="android:textSize">@dimen/sp_15</item>
        <item name="android:fontFamily">@font/noto_sans_regular</item>
        <item name="android:padding">@dimen/dp_12</item>
    </style>

</resources>
